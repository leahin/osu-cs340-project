<!-- Add data -->
<div class="add">
  <fieldset>
    <legend>Add Store</legend>
    <form method="post" class="addForm">
      <input type="text" id="storeName" placeholder="Store Name">
      <input type="text" id="storeStreetAddress" placeholder="Street Address">
      <input type="text" id="storeState" placeholder="State">
      <input type="text" id="storeZipCode" placeholder="Zip Code">
      <input type="submit" id="addStoreSubmit" value="Submit">
    </form>
  </fieldset>
</div>

<!-- Search data-->
<div class="add search">
  <fieldset>
    <legend>Search Store</legend>
    <form method="get" class="searchForm">
      <input type="text" id="storeNameSearch" placeholder="Store Name">
      <input type="submit" id="searchStoreSubmit" value="Search">
    </form>
  </fieldset>
</div>

<!-- read/update/delete data -->
  <table class="table table-striped table-bordered" id="storetable">
    <thead>
      <tr>
        <th>Store Id</th>
        <th>Store Name</th>
        <th>Street Address</th>
        <th>State</th>
        <th>Zip Code</th>
        <th></th>  <!-- Update -->
        <th></th>  <!-- Delete -->
      </tr>
    </thead>
    <tbody id="storetbody">
      <!-- Render data here -->
    {{#each storeList}}
      <tr>
        <td><form id="{{this.id}}">{{this.id}}</form></td>
        <td><input form="{{this.id}}" type="text" name="name" value="{{this.name}}" disabled></td>
        <td><input form="{{this.id}}" type="text" name="address" value="{{this.address}}" disabled></td>
        <td><input form="{{this.id}}" type="text" name="state" value="{{this.state}}" disabled></td>
        <td><input form="{{this.id}}" type="text" name="zipcode" value="{{this.zipcode}}" disabled></td>
        <td><button form="{{this.id}}" value="Update">Update</button></td>
        <td><button form="{{this.id}}" value="Delete">Delete</button></td>
      </tr>
    {{/each}}
    </tbody>
