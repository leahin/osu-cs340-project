<!-- Add Data -->
<div class="form">
  <fieldset>
    <legend>Add Product</legend>
    <p>Product Name should not be empty or white spaces.<br>
    Product Price must be a non-zero, positive number.</p>
    <form method="POST" action="/products/insert">
      <input type="text" name="productName" placeholder="Product Name" required>
      <input type="text" name="productPrice" placeholder="Price" required>
      <input class="btn btn-primary btn-sm" type="submit" value="Submit">
    </form>
  </fieldset>
</div>

<!-- Search -->
<div class="form">
  <fieldset>
    <legend>Search Product</legend>
    <form method="POST" action="/products">
      <input type="text" name="productName" placeholder="Product Name">
      <input class="btn btn-primary btn-sm" type="submit" value="Search">
    </form>
  </fieldset>
</div>

<!-- read/update/delete data -->
  <table class="table table-striped table-bordered" id="productTable">
    <thead>
      <tr>
        <th>Product Id</th>
        <th>Product Name</th>
        <th>Price</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    {{#each inputList}}
      <tr>
        <td><form id="{{this.product_id}}">{{this.product_id}}</form></td>
        <td><input form="{{this.product_id}}" type="text" class="input{{this.product_id}}" name="name" value="{{this.product_name}}" disabled required></td>
        <td><input form="{{this.product_id}}" type="text" class="input{{this.product_id}}" name="price" value="{{this.product_price}}" disabled required></td>
        <td><button form="{{this.product_id}}" class="btn btn-primary input{{this.product_id}}" name="update" value="{{this.product_id}}">Update</button></td>
        <td><button form="{{this.product_id}}" class="btn btn-primary" name="delete" value="{{this.product_id}}">Delete</button></td>
      </tr>
    {{/each}}
    </tbody>

  </table>
