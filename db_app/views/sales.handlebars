<h1>Sales</h1>
<p>Displays the total sales of each store of a selected period.</p>
<div class="form">
  <form id="selectSalesPeriod" method="POST" action="/sales">
    <fieldset>
      <legend>Select Sales Period</legend>
      <label for="date_from">From</label>
      <input type="date" name="dateFrom" required>
      <label for="date_to">To</label>
      <input type="date" name="dateTo" required>
      <input type="submit" class="btn btn-secondary btn-sm" name="submit">
    </fieldset>
</form>
</div>
{{#if filter}}
<h5>Sales Period from {{startDate}} to {{endDate}}</h5>
{{/if}}
<table class="table table-striped table-bordered" id="salestable">
  <thead>
    <tr>
      <th>Store Id</th>
      <th>Store Name</th>
      <th>Total Sales</th>
    </tr>
  </thead>
  <tbody>
    {{#each inputList}}
      <tr>
        <td>{{this.store_id}}</td>
        <td>{{{this.store_name}}}</td>
        <td>${{this.total_sales}}</td>
      </tr>
    {{/each}}
  </tbody>
