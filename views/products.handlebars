<h1>Products</h1>

<!-- Add Data -->
<div class="add">
  <fieldset>
    <legend>Add Product</legend>
    <form method="post" class="addForm">
      <input type="text" id="productName" placeholder="Product Name">
      <input type="text" id="productPrice" placeholder="Price">
      <input list="productTypes" name="productTypes" placeholder="Type">
      <datalist id="productTypes">
        <option value="Type 1">
        <option value="Type 2">
        <option value="Type 3">
        <option value="Type 4">
        <option value="Type 5">
      </datalist>
      <input type="submit" id="addProductSubmit" value="Submit">
    </form>
  </fieldset>
</div>

<!-- Search -->
<div class="search">
  <fieldset>
    <form method="get" class="searchForm">
      <input type="text" id="productNameSearch" placeholder="Product Name">
      <input type="text" id="productTypeSearch" placeholder="Type">
      <input type="submit" id="searchProductSubmit" value="Search">
    </form>
  </fieldset>
</div>

<!-- read/update/delete data -->
  <table class="table table-striped table-bordered" id="producttable">
    <thead>
      <tr>
        <th>Product Id</th>
        <th>Product Name</th>
        <th>Price</th>
        <th>Type</th>
        <th></th>  <!-- Update -->
        <th></th>  <!-- Delete -->
      </tr>
    </thead>
    <tbody id="producttbody">
      {{#each}}
        <tr>
          <td><form id={{this.id}}>{{this.id}}</td>
          <td><input type="text" name="name" value={{this.name}} disabled></td>
          <td><input type="text" name="price" value={{this.pice}} disabled></td>
          <td><input type="text" name="type" value={{this.type}} disabled></td>
          <td><button form={{this.id}} value="Update">Update</button></td>
          <td><button form={{this.id}} value="Delete">Delete</button></td>
        </tr>
      {{/each}}
    </tbody>
  </table>
